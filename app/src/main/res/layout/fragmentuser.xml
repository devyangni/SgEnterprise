<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/mainbackgorund"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/twentydp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:id="@+id/edtprofile"
                android:layout_gravity="end"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="@dimen/tendp"
                android:layout_marginRight="@dimen/tendp"
                android:layout_marginTop="@dimen/tendp"
                android:padding="@dimen/fivedp"
                android:textColor="@color/yellow"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:id="@+id/imag_profile"

                android:layout_marginTop="@dimen/tendp"
                android:src="@drawable/uprofile"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Profile"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/profile"
                android:layout_margin="@dimen/tendp"
                android:padding="@dimen/fivedp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:layout_marginLeft="@dimen/tendp"
                android:layout_marginRight="@dimen/tendp"
                android:layout_marginTop="@dimen/tendp"
                android:padding="@dimen/fivedp"
                android:textColor="@color/black"/>

            <EditText

                android:id="@+id/edt_fname"
                style="@style/EditTextTheme"
                android:focusable="false"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_border"
                android:hint=""
                android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:layout_marginLeft="@dimen/tendp"
                android:layout_marginRight="@dimen/tendp"
                android:layout_marginTop="@dimen/tendp"
                android:padding="@dimen/fivedp"
                android:textColor="@color/black"/>

            <EditText
                android:editable="false"
                android:id="@+id/edt_lname"
                style="@style/EditTextTheme"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_border"
                android:hint=""
                android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:layout_marginLeft="@dimen/tendp"
                android:layout_marginRight="@dimen/tendp"
                android:layout_marginTop="@dimen/tendp"
                android:padding="@dimen/fivedp"
                android:textColor="@color/black"/>

            <EditText
                android:editable="false"
                android:id="@+id/edt_companyname"
                style="@style/EditTextTheme"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_border"
                android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Mobilenumber"
                android:layout_marginLeft="@dimen/tendp"
                android:layout_marginRight="@dimen/tendp"
                android:layout_marginTop="@dimen/tendp"
                android:padding="@dimen/fivedp"
                android:textColor="@color/black"/>
            <EditText
                android:editable="false"
                android:id="@+id/edtfile"
                style="@style/EditTextTheme"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_border"
                android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:layout_marginLeft="@dimen/tendp"
                android:layout_marginRight="@dimen/tendp"
                android:layout_marginTop="@dimen/tendp"
                android:padding="@dimen/fivedp"
                android:textColor="@color/black"/>

            <EditText
                android:editable="false"
                android:id="@+id/email"
                style="@style/EditTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_border"
                android:layout_margin="@dimen/tendp"
                android:hint="" android:focusable="false"
                android:focusableInTouchMode="false"

                android:padding="@dimen/tendp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Password"
                android:layout_marginLeft="@dimen/tendp"
                android:layout_marginRight="@dimen/tendp"
                android:layout_marginTop="@dimen/tendp"
                android:padding="@dimen/fivedp"
                android:textColor="@color/black"/>


            <EditText
                android:id="@+id/password"
                style="@style/EditTextTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="*******"
                android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:background="@drawable/edt_border"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Confirmpsqd"
                android:layout_marginLeft="@dimen/tendp"
                android:layout_marginRight="@dimen/tendp"
                android:layout_marginTop="@dimen/tendp"
                android:padding="@dimen/fivedp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/cpassword"
                style="@style/EditTextTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tendp"
                android:hint="*******"
                android:padding="@dimen/tendp"
                android:background="@drawable/edt_border"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginLeft="@dimen/tendp"
                android:layout_marginRight="@dimen/tendp"
                android:layout_marginTop="@dimen/tendp"
                android:padding="@dimen/fivedp"
                android:textColor="@color/black"/>


            <EditText
                android:editable="false"
                android:id="@+id/edt_address"
                style="@style/EditTextTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:background="@drawable/edt_border"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:layout_marginLeft="@dimen/tendp"
                android:layout_marginRight="@dimen/tendp"
                android:layout_marginTop="@dimen/tendp"
                android:padding="@dimen/fivedp"
                android:textColor="@color/black"/>
            <EditText
                android:editable="false"
                android:id="@+id/edt_city"
                style="@style/EditTextTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:background="@drawable/edt_border"
                android:inputType="text"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State"
                android:layout_marginLeft="@dimen/tendp"
                android:layout_marginRight="@dimen/tendp"
                android:layout_marginTop="@dimen/tendp"
                android:padding="@dimen/fivedp"
                android:textColor="@color/black"/>
            <EditText
                android:editable="false"
                android:id="@+id/edt_state"
                style="@style/EditTextTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:background="@drawable/edt_border"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Postal Code"
                android:layout_marginLeft="@dimen/tendp"
                android:layout_marginRight="@dimen/tendp"
                android:layout_marginTop="@dimen/tendp"
                android:padding="@dimen/fivedp"
                android:textColor="@color/black"/>

            <EditText
                android:editable="false"
                android:clickable="false"
                android:id="@+id/edt_zip"
                style="@style/EditTextTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:background="@drawable/edt_border"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edt_file"
                    style="@style/EditTextTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Select file"
                    android:layout_margin="@dimen/tendp"
                    android:padding="@dimen/tendp"
                    android:background="@drawable/edt_border"
                    android:inputType="text"
                    android:layout_weight="7"
                    android:editable="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/fourteendp"
                    />
                <Button
                    android:id="@+id/btn_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/tendp"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:text="Upload File"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sixteendp" />
            </LinearLayout>

            <!-- Login Button -->


            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twentydp"
                android:gravity="center"
                android:layout_margin="@dimen/twentydp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:padding="@dimen/tendp"
                android:textStyle="bold"
                android:text="Update Profile"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sixteendp" />



        </LinearLayout>

    </ScrollView>

</LinearLayout>