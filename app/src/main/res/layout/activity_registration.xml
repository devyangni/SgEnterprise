<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/mainbackgorund"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/twentydp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edt_fname"
                style="@style/EditTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_border"
                android:hint="First Name"
                android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:inputType="textEmailAddress"
                 android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
            <EditText
                android:id="@+id/edt_lname"
                style="@style/EditTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_border"
                android:hint="Last Name"
                android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
            <EditText
                android:id="@+id/edt_companyname"
                style="@style/EditTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_border"
                android:hint="Company Name"
                android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />

            <EditText
                android:id="@+id/edtfile"
                style="@style/EditTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_border"
                android:hint="@string/Mobilenumber"
                android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />

            <EditText
                android:id="@+id/email"
                style="@style/EditTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_border"
                 android:layout_margin="@dimen/tendp"
                android:hint="Email Address"
                android:padding="@dimen/tendp"
                android:inputType="textEmailAddress"
                 android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />



            <EditText
                android:id="@+id/password"
                style="@style/EditTextTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="*******"
                 android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:background="@drawable/edt_border"
                android:inputType="textPassword"
                 android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
            <EditText
                android:id="@+id/cpassword"
                style="@style/EditTextTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:layout_margin="@dimen/tendp"
                android:hint="*******"
                android:padding="@dimen/tendp"
                android:background="@drawable/edt_border"
                android:inputType="textPassword"
                 android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
            <EditText
                android:id="@+id/edt_address"
                style="@style/EditTextTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                 android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:background="@drawable/edt_border"
                android:inputType="text"
                 android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
            <EditText
                android:id="@+id/edt_city"
                style="@style/EditTextTheme"
                android:layout_width="fill_parent"
                android:hint="City"
                android:layout_height="wrap_content"
                 android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:background="@drawable/edt_border"
                android:inputType="text"
                 android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
            <EditText
                android:id="@+id/edt_state"
                style="@style/EditTextTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="State"
                 android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:background="@drawable/edt_border"
                android:inputType="text"
                 android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />

            <EditText
                android:id="@+id/edt_zip"
                style="@style/EditTextTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Postal Code"
                 android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:background="@drawable/edt_border"
                android:inputType="text"
                 android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:visibility="gone"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/edt_file"
                style="@style/EditTextTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Select file"
                android:layout_margin="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:background="@drawable/edt_border"
                android:inputType="text"
                android:layout_weight="7"
                android:editable="false"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />
                <Button
                    android:id="@+id/btn_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/tendp"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:text="Upload File"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sixteendp" />
            </LinearLayout>

            <!-- Login Button -->


            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twentydp"
                android:gravity="center"
                android:layout_margin="@dimen/twentydp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:padding="@dimen/tendp"
                android:textStyle="bold"
                android:text="Sign Up"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sixteendp" />




            <!-- Link to Login Screen -->



        </LinearLayout>

    </ScrollView>

</LinearLayout>