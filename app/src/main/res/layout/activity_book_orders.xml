<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackgorund"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context=".Home.User.BookOrdersActivity">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:layout_margin="@dimen/twentydp"
            android:background="@color/white"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:layout_margin="@dimen/twentydp"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_Date_order"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Date:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp" />

                <!--   <LinearLayout
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"

                       android:orientation="horizontal">

                       <TextView
                           android:id="@+id/datedisplay_order"
                           android:layout_width="50dp"
                           android:layout_height="30dp"
                           android:layout_marginLeft="10dp"
                           android:layout_weight="0.30"

                             android:padding="2dp"
                           android:text="select date "
                           android:textColor="@color/Black"
                           android:textSize="15dp" />


                       <ImageView
                           android:id="@+id/datepicker_order"
                           android:layout_width="40dp"
                           android:layout_height="30dp"

                           android:paddingBottom="5dp"
                           android:paddingTop="2dp"
                           android:src="@drawable/cal"
                           android:text="change_date" />
                   </LinearLayout>
       -->


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="select date "
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_weight="0.30"
                        android:id="@+id/datedisplay_order"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="50dp" />
                    <ImageView
                        android:id="@+id/datepicker_order"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="change_date"
                        android:layout_marginLeft="@dimen/fiftydp"
                        android:src="@drawable/ic_event_black_24dp"
                        android:paddingBottom="5dp"
                        />


                </LinearLayout>








            </LinearLayout>
            <EditText
                android:id="@+id/mobile"
                style="@style/EditTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_border"
                android:layout_marginBottom="10dp"
                android:padding="@dimen/tendp"
                android:hint="Mobile No"
                android:maxLength="10"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fifteendp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edt_border">
                <Spinner
                    style="@style/EditTextTheme"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:spinnerMode="dialog"
                    android:id="@+id/sp_material"
                    android:layout_marginTop="@dimen/tendp"

                    />
            </LinearLayout>

            <EditText

                style="@style/EditTextTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Qty"
                android:layout_marginTop="@dimen/tendp"
                android:padding="@dimen/tendp"
                android:id="@+id/edt_qty"
                android:background="@drawable/edt_border"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/fourteendp"
                />


            <!-- Login Button -->

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twentydp"
                android:gravity="center"
                android:layout_margin="@dimen/twentydp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:padding="@dimen/tendp"
                android:textStyle="bold"
                android:text="Submit"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/fourteendp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
